                                <Image Source="Image/1.PNG"/>
                            </StackPanel>
                        </ToolTip>
                    </RadioButton.ToolTip>
                </RadioButton>
                <Expander Header="Состав" HorizontalAlignment="Right" Margin="0,0,-0.333,0" Width="495">
